<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Details</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="container mt-4 col-md-8">
      <h1 class="text-center mb-4 heading-animation">Students Details</h1>
      <table class="table table-striped text-center mb-0">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Course</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% studData.forEach((student, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= student.name %></td>
            <td><%= student.phone %></td>
            <td><%= student.email %></td>
            <td><%= student.course %></td>
            <td>
              <a href="/delete?id=<%= index %>" class="btn btn-danger"
                >Delete</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <div class="text-center mt-3">
        <a href="/insert" class="btn btn-success">Add Student</a>
      </div>
    </div>
  </body>
</html>
