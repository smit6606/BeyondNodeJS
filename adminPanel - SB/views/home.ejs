<%- include("partials/header") %>

<!-- Banner Section -->
<div
  style="background: url('/banner.jpg') center/cover no-repeat; height: 300px"
>
  <div
    style="
      background-color: rgba(0, 0, 0, 0.5);
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    "
  >
    <h1 style="color: white; font-size: 3rem">Welcome to Movie World</h1>
  </div>
</div>

<!-- Movie Cards -->
<div
  style="display: flex; flex-wrap: wrap; justify-content: center; padding: 20px"
>
  <% if (movies.length === 0) { %>
  <p>No movies found. Click "Show Form" to add some!</p>
  <% } %> <% movies.forEach(movie => { %>
  <div
    style="
      width: 250px;
      margin: 15px;
      border: 1px solid #ccc;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    "
  >
    <img
      src="/<%= movie.image %>"
      alt="Movie Image"
      style="width: 100%; height: 300px; object-fit: cover"
    />
    <div style="padding: 15px">
      <h2 style="margin: 0; font-size: 20px"><%= movie.title %></h2>
      <p><strong>Category:</strong> <%= movie.category %></p>
      <p><strong>Year:</strong> <%= movie.year %></p>
      <a href="/movie/<%= movie._id %>" style="color: #007bff">More Info</a>
    </div>
  </div>
  <% }) %>
</div>

<%- include("partials/footer") %>
