<%- include('../header') %>

<div class="page-wrapper">
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex no-block align-items-center">
        <h4 class="page-title">Edit Extra Category</h4>
        <div class="ms-auto text-end">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                Edit Extra Category
              </li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-7 offset-md-3">
        <div class="card">
          <form
            method="POST"
            action="/extraCategory/updateExtraCategory/<%= extraCategoryData._id %>"
            class="form-horizontal"
          >
            <div class="card-body">
              <h4 class="card-title mb-4 text-center">Edit Extra Category</h4>

              <!-- Select Main Category -->
              <div class="form-group">
                <label>Select Category</label>
                <select name="category_id" class="form-control w-100" required>
                  <option value="">-- Select Category --</option>
                  <% allCategory.forEach(function(category) { %>
                    <option value="<%= category._id %>" 
                      <%= category._id.toString() === extraCategoryData.category_id.toString() ? 'selected' : '' %>>
                      <%= category.c_title %>
                    </option>
                  <% }); %>
                </select>
              </div>

              <!-- Select Sub Category -->
              <div class="form-group">
                <label>Select Sub Category</label>
                <select name="subCategory_id" class="form-control w-100" required>
                  <option value="">-- Select Sub Category --</option>
                  <% allSubCategory.forEach(function(subcat) { %>
                    <option value="<%= subcat._id %>" 
                      <%= subcat._id.toString() === extraCategoryData.subCategory_id.toString() ? 'selected' : '' %>>
                      <%= subcat.subcategory_title %>
                    </option>
                  <% }); %>
                </select>
              </div>

              <!-- Extra Category Title -->
              <div class="form-group">
                <label>Extra Category Title</label>
                <input
                  type="text"
                  name="extraCategory_title"
                  class="form-control w-100"
                  placeholder="Enter Extra Category Title"
                  value="<%= extraCategoryData.extraCategory_title %>"
                  required
                />
              </div>

              <!-- Extra Category Description -->
              <div class="form-group">
                <label>Description</label>
                <textarea
                  name="extraCategory_description"
                  class="form-control w-100"
                  rows="3"
                  placeholder="Write a short description..."
                ><%= extraCategoryData.extraCategory_description %></textarea>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="border-top">
              <div class="card-body text-center">
                <button type="submit" class="btn btn-warning px-5">
                  Update Extra Category
                </button>
              </div>
            </div>
          </form>
        </div>
        <%- include('../footer') %>
      </div>
    </div>
  </div>
</div>
