<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Insert Dish</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #121212;
        color: #fff;
        font-family: "Poppins", sans-serif;
      }

      .form-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .card {
        background-color: #1e1e1e;
        border: none;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 500px;
      }

      .card h2 {
        color: #ff6f00;
        text-align: center;
        margin-bottom: 30px;
      }

      .form-label {
        color: #ccc;
      }

      .form-control {
        background-color: #252525;
        color: #fff;
        border: 1px solid #333;
        border-radius: 10px;
      }

      .form-control::placeholder {
        color: #aaa;
      }

      .form-check-label {
        color: #ccc;
      }

      .form-check-input {
        background-color: #333;
        border: 1px solid #555;
      }

      .btn-primary {
        background-color: #ff6f00;
        border: none;
        font-weight: bold;
        border-radius: 10px;
        width: 100%;
        margin-top: 10px;
      }

      .btn-primary:hover {
        background-color: #e65c00;
      }

      .back-link {
        color: #ff6f00;
        text-decoration: none;
        display: block;
        text-align: center;
        margin-top: 15px;
      }

      .back-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>

  <body>
    <div class="form-wrapper">
      <div class="card">
        <h2>Insert New Dish</h2>
        <form
          method="post"
          action="/dish-inventory"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label">Dish Name:</label>
            <input
              type="text"
              class="form-control"
              name="name"
              placeholder="Enter dish name"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Dish Price (₹):</label>
            <input
              type="number"
              class="form-control"
              name="price"
              placeholder="Enter dish price"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Dish Category:</label><br />
            <div class="form-check form-check-inline">
              <input
                type="checkbox"
                class="form-check-input"
                name="category"
                value="Veg"
              />
              <label class="form-check-label">Veg</label>
            </div>
            <div class="form-check form-check-inline">
              <input
                type="checkbox"
                class="form-check-input"
                name="category"
                value="Non-Veg"
              />
              <label class="form-check-label">Non-Veg</label>
            </div>
            <div class="form-check form-check-inline">
              <input
                type="checkbox"
                class="form-check-input"
                name="category"
                value="Vegan"
              />
              <label class="form-check-label">Vegan</label>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">Dish Ingredients:</label>
            <input
              type="text"
              class="form-control"
              name="ingredients"
              placeholder="Enter ingredients"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Dish Image:</label>
            <input type="file" class="form-control" name="image" />
          </div>

          <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <a href="/dashboard" class="back-link">⬅ Back to Dashboard</a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
