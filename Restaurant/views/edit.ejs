<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Edit Dish Details</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        background-color: #121212;
        color: #fff;
        font-family: "Poppins", sans-serif;
      }

      .form-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .card {
        background-color: #1e1e1e;
        border: none;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 550px;
      }

      .card h2 {
        color: #ff6f00;
        text-align: center;
        margin-bottom: 20px;
      }

      .form-label {
        color: #ccc;
      }

      .form-control {
        background-color: #252525;
        color: #fff;
        border: 1px solid #333;
        border-radius: 10px;
      }

      .form-control::placeholder {
        color: #aaa;
      }

      .form-check-label {
        color: #ccc;
      }

      .form-check-input {
        background-color: #333;
        border: 1px solid #555;
      }

      .btn-primary {
        background-color: #ff6f00;
        border: none;
        font-weight: bold;
        border-radius: 10px;
        width: 100%;
        margin-top: 10px;
      }

      .btn-primary:hover {
        background-color: #e65c00;
      }

      .back-link {
        color: #ff6f00;
        text-decoration: none;
        display: block;
        text-align: center;
        margin-top: 15px;
      }

      .back-link:hover {
        text-decoration: underline;
      }

      .img-thumbnail {
        background-color: #252525;
        border: 1px solid #444;
      }
    </style>
  </head>

  <body>
    <div class="form-wrapper">
      <div class="card">
        <h2>Edit Dish Details</h2>

        <% if (typeof updated !== 'undefined' && updated) { %>
        <div class="alert alert-success text-center" role="alert">
          ✅ Dish updated successfully!
        </div>
        <% } %>

        <form
          method="post"
          action="/dish-inventory"
          enctype="multipart/form-data"
        >
          <input type="hidden" name="id" value="<%= record._id %>" />

          <div class="mb-3">
            <label class="form-label">Dish Name:</label>
            <input
              type="text"
              class="form-control"
              name="name"
              value="<%= record.name %>"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Dish Price (₹):</label>
            <input
              type="number"
              class="form-control"
              name="price"
              value="<%= record.price %>"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Dish Category:</label><br />
            <div class="form-check form-check-inline">
              <input type="checkbox" class="form-check-input" name="category"
              value="Veg" <%= record.category.includes("Veg") ? "checked" : ""
              %> />
              <label class="form-check-label">Veg</label>
            </div>
            <div class="form-check form-check-inline">
              <input type="checkbox" class="form-check-input" name="category"
              value="Non-Veg" <%= record.category.includes("Non-Veg") ?
              "checked" : "" %> />
              <label class="form-check-label">Non-Veg</label>
            </div>
            <div class="form-check form-check-inline">
              <input type="checkbox" class="form-check-input" name="category"
              value="Vegan" <%= record.category.includes("Vegan") ? "checked" :
              "" %> />
              <label class="form-check-label">Vegan</label>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">Dish Ingredients:</label>
            <input
              type="text"
              class="form-control"
              name="ingredients"
              value="<%= record.ingredients %>"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Dish Image:</label>
            <input type="file" class="form-control" name="image" />
            <% if (record.image) { %>
            <div class="mt-2">
              <img src="/<%= record.image.replace("\\", "/") %>"
              class="img-thumbnail" width="150" />
            </div>
            <% } %>
          </div>

          <button type="submit" class="btn btn-primary">Update Dish</button>
        </form>

        <a href="/dashboard" class="back-link">⬅ Back to Dashboard</a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
