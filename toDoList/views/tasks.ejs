<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Today's Tasks</title>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-image: linear-gradient(
          to right,
          #1a2980 0%,
          #26d0ce 54%,
          #1a2980 100%
        );
        background-size: cover;
        background-position: center;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        color: rgba(255, 255, 255, 0.85);
      }

      .container {
        background-color: rgba(255, 255, 255, 0.85);
        padding: 40px 50px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1), 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 700px;
        animation: fadeInUp 1s ease-out;
      }

      h1 {
        font-family: "Poppins", sans-serif;
        font-size: 32px;
        font-weight: 600;
        color: #333;
        text-align: center;
        margin-bottom: 30px;
        position: relative;
        letter-spacing: 1px;
        text-transform: uppercase;
        background: linear-gradient(
          90deg,
          #1a2980 0%,
          #26d0ce 54%,
          #1a2980 100%
        );
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        animation: fadeInUp 1s ease-out, gradientMove 3s ease-in-out infinite;
      }

      @keyframes fadeInUp {
        0% {
          transform: translateY(-30px);
          opacity: 0;
        }
        100% {
          transform: translateY(0);
          opacity: 1;
        }
      }

      @keyframes gradientMove {
        0% {
          background-position: 100% 0;
        }
        50% {
          background-position: 0% 100%;
        }
        100% {
          background-position: 100% 0;
        }
      }

      h2 {
        color: #333;
        font-size: 24px;
        margin-top: 40px;
        text-align: center;
        font-family: "Poppins", sans-serif;
      }

      /* Task List Styles */
      .task-list {
        list-style: none;
        padding: 0;
        margin-top: 20px;
      }

      .task-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        margin-bottom: 10px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
      }

      .task-item:hover {
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
      }

      .task-title {
        font-size: 18px;
        font-weight: bold;
        color: #333;
        flex-grow: 1;
        padding-left: 10px;
      }

      .task-description {
        font-size: 14px;
        color: #555;
        flex-grow: 2;
        padding-left: 10px;
      }

      input[type="checkbox"] {
        cursor: pointer;
        margin-right: 10px;
      }

      .btn-group {
        display: flex;
        gap: 10px;
      }

      .edit-btn,
      .delete-btn {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 40px;
        height: 40px;
        border: none;
        border-radius: 50%;
        cursor: pointer;
        font-size: 20px;
        transition: transform 0.2s ease-in-out;
      }

      .edit-btn {
        background-color: #28a745;
        color: white;
      }

      .edit-btn:hover {
        background-color: #218838;
        transform: scale(1.1);
      }

      .delete-btn {
        background-color: #ff4d4d;
        color: white;
      }

      .delete-btn:hover {
        background-color: #e60000;
        transform: scale(1.1);
      }

      .completed {
        background-color: #e8f5e9;
        text-decoration: line-through;
      }

      /* Add Task Button Styles */
      .add-task-btn {
        display: inline-block;
        padding: 12px 20px;
        margin-top: 30px;
        background-color: #007bff;
        color: white;
        font-weight: bold;
        font-size: 16px;
        border-radius: 5px;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease;
        animation: scaleUp 0.4s ease-in-out;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.7);
      }

      .add-task-btn:hover {
        background-color: #0056b3;
        transform: scale(1.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.6);
      }

      .add-task-btn:active {
        transform: scale(1.05);
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.6);
      }

      @keyframes scaleUp {
        0% {
          transform: scale(0.9);
        }
        100% {
          transform: scale(1);
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Today's Tasks</h1>

      <div class="tasks-section">
        <h2>Active Tasks</h2>
        <ul class="task-list">
          <% tasks.forEach(task => { %>
          <li class="task-item">
            <form
              action="/complete-task/<%= task.id %>"
              method="POST"
              class="task-form"
            >
              <input type="checkbox" onchange="this.form.submit()" />
              <span class="task-title"><%= task.title %></span>
              <span class="task-description"><%= task.description %></span>
            </form>
            <div class="btn-group">
              <form action="/edit-task/<%= task.id %>" method="GET">
                <button type="submit" class="edit-btn">
                  <i class="ri-edit-2-line"></i>
                </button>
              </form>
              <form action="/delete-task/<%= task.id %>" method="POST">
                <button type="submit" class="delete-btn">
                  <i class="ri-delete-bin-2-line"></i>
                </button>
              </form>
            </div>
          </li>
          <% }) %>
        </ul>
      </div>

      <div class="completed-section">
        <h2>Completed Tasks</h2>
        <ul class="task-list">
          <% completedTasks.forEach(task => { %>
          <li class="task-item completed">
            <span class="task-title"><%= task.title %></span>
            <span class="task-description"><%= task.description %></span>
            <form action="/delete-task/<%= task.id %>" method="POST">
              <button type="submit" class="delete-btn">
                <i class="ri-delete-bin-2-line"></i>
              </button>
            </form>
          </li>
          <% }) %>
        </ul>
      </div>
      <a href="/" class="add-task-btn">Add New Task</a>
    </div>
  </body>
</html>
